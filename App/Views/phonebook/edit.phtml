            <div class="form-group">
                <label for="name">
                    Descrição:
                </label>
                <textarea name="description" class="form-control"><?= $phonebook->getDescription() ?></textarea>
            </div>

            <div class="form-group">
                <label>Email</label>
                <div class="input-group">
                    <input type="email" name="emails[]"
                           value="<?= isset($phonebook->getEmails()[0]) ? $phonebook->getEmails()[0] : '' ?>"
                           class="form-control col-sm-12" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text" style="background: darkgreen; color: #fff" onclick="addEmail('')">
                            Adicionar
                        </div>
                    </div>
                </div>
